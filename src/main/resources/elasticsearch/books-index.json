{
  "settings": {
    "analysis": {
      "analyzer": {
        "ko": { "type": "custom", "tokenizer": "nori_tokenizer", "filter": ["lowercase"] },
        "en": { "type": "custom", "tokenizer": "standard", "filter": ["lowercase","english_stop","english_stemmer"] }
      },
      "filter": {
        "english_stop": { "type": "stop", "stopwords": "_english_" },
        "english_stemmer": { "type": "stemmer", "language": "light_english" }
      }
    }
  },
  "mappings": {
    "properties": {
      "id":        { "type": "keyword" },
      "isbn":      { "type": "keyword" },
      "image":     { "type": "keyword" },
      "title":  { "type": "text", "analyzer":"standard",
        "fields": { "ko":{ "type":"text","analyzer":"ko" }, "en":{ "type":"text","analyzer":"en" }, "keyword":{ "type":"keyword" } }
      },
      "author": { "type": "text", "analyzer":"standard",
        "fields": { "ko":{ "type":"text","analyzer":"ko" }, "en":{ "type":"text","analyzer":"en" }, "keyword":{ "type":"keyword" } }
      },
      "subtitle": { "type":"text", "index": false },
      "published": { "type":"date", "format":"yyyy-MM-dd||strict_date_optional_time||epoch_millis" },
      "createdAt": { "type": "date", "format": "strict_date_optional_time_nanos||epoch_millis" }
    }
  }
}
